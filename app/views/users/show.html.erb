<div class="contentblock">
  <div id="content_button_bar">
    <div class="content_button_left"><%= link_to('Edit', {:action => 'edit', :id => @user.id}, :class => 'action edit') %></div>
    <div class="content_button_right"><%= link_to('Delete', {:action => 'delete', :id => @user.id}, :class => 'action delete') %></div>
  </div>
</div>

<div class="contentblock">
  <table summary="user show" width="400px" class="shop_wait">
    <tr>
      <th class="shop_wait_inside">Name</th>
      <td class="shop_wait_inside"><%= @user.name %></td>
    </tr>
    <tr>
      <th class="shop_wait_inside">Mail</th>
      <td class="shop_wait_inside"><%= mail_to(@user.email)%></td>
    </tr>
      <th class="shop_wait_inside">Created</th>
      <td class="shop_wait_inside"><%= @user.created_at %></td>
    </tr>
    <tr>
      <th class="shop_wait_inside">Updated</th>
      <td class="shop_wait_inside"><%= @user.updated_at %></td>
    </tr>
  </table>
</div>
