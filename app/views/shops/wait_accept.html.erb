<div class="contentblock">


	<center><%= pluralize(@shops.size, 'shop') %> pending acceptation found.</center>

	<table class="shop_wait" width="950px">
		<tr class="shop_wait_inside">
			<th class="shop_wait_inside" width="120px">Shop</th>
			<th class="shop_wait_inside" width="250px">Address</th>
			<th class="shop_wait_inside" width="250px">Open</th>
			<th class="shop_wait_inside" width="250px">Close</th>
			<th class="shop_wait_inside" width="80px">Action</th>
		</tr>

		<% @shops.each do |shop| %>
			<td class="shop_wait_inside"><%= shop.shopname%></td>
			<td class="shop_wait_inside"><%= shop.address%></td>
			<td class="shop_wait_inside"><%= shop.topen.to_s(:time)%></td>
			<td class="shop_wait_inside"><%= shop.tclose.to_s(:time)%></td>
			<td class="shop_wait_inside">
			<%= link_to("Accept",{:action => 'accept', :id => shop.id}, :class => 'action show')%></td>
	</tr>
	<% end %>
    </table>
    <br>
</div>